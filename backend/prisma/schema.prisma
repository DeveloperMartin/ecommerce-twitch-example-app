// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Location {
  locationId  Int      @id @default(autoincrement())
  code        String   @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(dbgenerated("getutcdate()")) @db.DateTimeOffset
  updatedAt   DateTime @default(dbgenerated("getutcdate()")) @db.DateTimeOffset

  @@map("Locations")
}

model Product {
  productId   Int      @id @default(autoincrement())
  code        String   @unique
  description String
  price       Float
  categoryId  Int
  sizeId      Int
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(dbgenerated("getutcdate()")) @db.DateTimeOffset
  updatedAt   DateTime @default(dbgenerated("getutcdate()")) @db.DateTimeOffset


  @@map("Products")
}

model ProductStock {
  productStockId Int      @id @default(autoincrement())
  productId      Int
  locationId     Int
  count          Int
  alertStock     Int
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(dbgenerated("getutcdate()")) @db.DateTimeOffset
  updatedAt      DateTime @default(dbgenerated("getutcdate()")) @db.DateTimeOffset


  @@map("ProductsStock")
}

model Category {
  categoryId  Int      @id @default(autoincrement())
  code        String   @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(dbgenerated("getutcdate()")) @db.DateTimeOffset
  updatedAt   DateTime @default(dbgenerated("getutcdate()")) @db.DateTimeOffset

  products Product[]

  @@map("Categories")
}

model Size {
  sizeId      Int      @id @default(autoincrement())
  code        String   @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(dbgenerated("getutcdate()")) @db.DateTimeOffset
  updatedAt   DateTime @default(dbgenerated("getutcdate()")) @db.DateTimeOffset

  products Product[]

  @@map("Sizes")
}
